<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="opaque">

    <!-- Background Gradient -->
    <item>
        <shape>
            <gradient
                android:angle="135"
                android:startColor="#E0E7FF"
                android:centerColor="#BFDBFE"
                android:endColor="#3B82F6"
                android:type="linear"/>
        </shape>
    </item>

    <!-- White Circle Background for Magnifying Glass -->
    <item
        android:width="100dp"
        android:height="100dp"
        android:gravity="center"
        android:top="-20dp">
        <shape>
            <solid android:color="#FFFFFF"/>
            <corners android:radius="50dp"/>
        </shape>
    </item>

    <!-- Clipped Image Inside Magnifying Glass -->
    <item>
        <bitmap
            android:src="@mipmap/ic_launcher_foreground"
            android:gravity="center"
            android:tileMode="disabled"/>
    </item>

    <!-- App Name Below Icon -->
    <item
        android:top="380dp"
        android:gravity="center_horizontal">
        <shape>
            <size android:width="200dp" android:height="40dp"/>
        </shape>
    </item>
</layer-list>